{
  "name": "focusflow",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build:main": "tsc -p tsconfig.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer",
    "start": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.benclark.focusflow",
    "productName": "FocusFlow",
    "files": [
      "dist/**/*",
      "assets/loops/**/*",
      "package.json"
    ],
    "mac": { "target": "dmg" },
    "win": { "target": "nsis" }
  }
}
