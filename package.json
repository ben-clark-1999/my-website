{
  "name": "focusflow",
  "version": "1.0.0",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "tsc -p tsconfig.json && vite build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron": "^31.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "electron-builder": "^25.0.0",
    "typescript": "^5.4.0",
    "vite": "^5.0.0",
    "@types/node": "^20.11.0"
  },
  "build": {
    "appId": "com.benclark.focusflow",
    "productName": "FocusFlow",
    "files": [
      "dist/**/*",
      "assets/loops/**/*",
      "package.json"
    ],
    "mac": { "target": "dmg" },
    "win": { "target": "nsis" }
  }
}
